{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "vimls": {
      "command": "vim-language-server",
      "rootPatterns": ["vimrc", "init.vim"],
      "filetypes": ["vim"],
      "args": ["--stdio"]
    },
    "luals": {
      "command": "lua-language-server",
      "rootPatterns": [".git", ".luarc.json"],
      "filetypes": ["lua"]
    },
    "efm": {
      "command": "efm-langserver",
      "rootPatterns": [".git", "vimrc", "init.vim"],
      "filetypes": ["vim", "eruby", "markdown", "yaml"]
    }
  },
  "ltex.disabledRules": { "en-US": ["MORFOLOGIK_RULE_EN_US"] }
}
