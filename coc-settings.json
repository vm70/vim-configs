{
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "filetypes": ["vim", "eruby", "markdown", "yaml", "lua"],
      "rootPatterns": [".git", "vimrc", "init.vim", "selene.toml"]
    },
    "golang": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod"]
    },
    "luals": {
      "command": "lua-language-server",
      "filetypes": ["lua"],
      "rootPatterns": [".git", ".luarc.json"]
    },
    "vimls": {
      "args": ["--stdio"],
      "command": "vim-language-server",
      "filetypes": ["vim"],
      "rootPatterns": ["vimrc", "init.vim"]
    }
  },
  "ltex.disabledRules": {
    "en-US": ["MORFOLOGIK_RULE_EN_US"]
  },
  "semanticTokens.enable": true
}
